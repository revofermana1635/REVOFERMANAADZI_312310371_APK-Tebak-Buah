<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.firodev.tebakbuah.MainActivity"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/tebakbuah"
            android:layout_gravity="center"
            android:layout_margin="12dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_apel"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:src="@drawable/apel"
                android:background="@android:color/holo_orange_dark"/>


            <ImageView
                android:id="@+id/imageView_alpukat"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:src="@drawable/alpukat"
                android:background="@android:color/holo_red_dark"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_durian"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/durian"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:background="@android:color/holo_blue_dark"/>

            <ImageView
                android:id="@+id/imageView_ceri"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/ceri"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:background="@android:color/holo_green_dark"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>